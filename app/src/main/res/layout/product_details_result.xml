<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/productDetailsImgResult"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/productDetailsDescriptionResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDetailsImgResult"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:hint="description.." />

    <RatingBar
        android:id="@+id/productDetailsRatingResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDetailsDescriptionResult"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="166dp"
        android:numStars="5" />

    <TextView
        android:id="@+id/productDetailsRatingValueResult"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDetailsRatingResult"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="297dp"
        android:hint="ratingValue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/productDetailsPriceResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDetailsRatingValueResult"
        android:layout_marginTop="0dp"
        android:hint="Price"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/hyperLinkResult"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_below="@+id/productDetailsPriceResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:autoLink="web"
        android:textColor="#F1E57D" />

</RelativeLayout>